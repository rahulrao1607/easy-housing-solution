@model IEnumerable<EasyHousingSolutionMVC.Models.Property>

@{
	ViewData["Title"] = "Admin Property";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
	

	<div class="d-flex justify-content-lg-between m-4">
		<h3>All the Properties listed below: </h3>


		<div class="dropdown">
			<button class="btn  dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="background-color: #0A4275; color:white">
				Sort By - Price
			</button>
			<ul class="dropdown-menu">
				<li><a class="dropdown-item" method="get" href="@Url.Action("GetPropertyByPriceLowToHigh","Property")">Low to High</a></li>
				<li><a class="dropdown-item" method="get" href="@Url.Action("GetPropertyByPriceHighToLow","Property")">High to Low</a></li>
			</ul>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-3">
				<form action="@Url.Action("GetActiveProperties","Property")" method="get">
					<h2>Filter</h2>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" name="IsActive" id="IsActive" value="true">
						<label class="form-check-label" for="IsActive">
							IsActive
						</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" name="InActive" id="InActive" value="false">
						<label class="form-check-label" for="InActive">
							InActive
						</label>
					</div>
					<button type="submit" class="btn " style="background-color: #0A4275; color:white">Apply</button>
				</form>

			</div>
			<div class="col-9">
				<div class="row mb justify-content-between">
					@foreach (var item in Model)
					{
						@Html.Partial("_AdminCard", item)
					}
				</div>
			</div>
		</div>

	</div>

