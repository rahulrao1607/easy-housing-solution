@model EasyHousingSolutionMVC.Models.Property

@{
	ViewData["Title"] = "EditStatus";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Edit Status</h4>
<hr />

<form asp-action="EditStatus">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="PropertyId" class="control-label"></label>
				<input asp-for="PropertyId" class="form-control" readonly />
				<span asp-validation-for="PropertyId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PropertyName" class="control-label"></label>
				<input asp-for="PropertyName" class="form-control" readonly />
				<span asp-validation-for="PropertyName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PropertyType" class="control-label"></label>
				<input asp-for="PropertyType" class="form-control" readonly />
				<span asp-validation-for="PropertyType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PropertyOption" class="control-label"></label>
				<input asp-for="PropertyOption" class="form-control" readonly />
				<span asp-validation-for="PropertyOption" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" readonly />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CityId" class="control-label"></label>
				<input asp-for="CityId" class="form-control" readonly />
				<span asp-validation-for="CityId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-6">
			
			<div class="form-group">
				<label asp-for="Address" class="control-label"></label>
				<input asp-for="Address" class="form-control" readonly />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PriceRange" class="control-label"></label>
				<input asp-for="PriceRange" class="form-control" readonly />
				<span asp-validation-for="PriceRange" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="InitialDeposit" class="control-label"></label>
				<input asp-for="InitialDeposit" class="form-control" readonly />
				<span asp-validation-for="InitialDeposit" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SellerId" class="control-label"></label>
				<input asp-for="SellerId" class="form-control" readonly />
				<span asp-validation-for="SellerId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="StateId" class="control-label"></label>
				<input asp-for="StateId" class="form-control" readonly />
				<span asp-validation-for="StateId" class="text-danger"></span>

			</div>
			<div class="form-group">

				<label asp-for="Landmark" class="control-label"></label>

				<input asp-for="Landmark" class="form-control" readonly/>

				<span asp-validation-for="Landmark" class="text-danger"></span>

			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
				</label>
			</div>
			
		</div>
	</div>
	<div>
		
		<div class="form-group mt-3">
			<input type="submit" value="Save" class="btn" style="background-color: #0A4275; color:white" />
		</div>
		<div class="btn  mt-2" style="background-color: #0A4275; color:white">
			<a class="text-white text-decoration-none" asp-action="AdminProperty">Back to List</a>
		</div>
	</div>
</form>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
