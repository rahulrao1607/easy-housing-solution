@model EasyHousingSolutionMVC.Models.Property

@{

    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Add Property</h1>


<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">

                <label asp-for="PropertyName" class="control-label"></label>

                <input asp-for="PropertyName" class="form-control" />

                <span asp-validation-for="PropertyName" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label asp-for="PropertyType" class="control-label"></label>

                <input asp-for="PropertyType" class="form-control" />

                <span asp-validation-for="PropertyType" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label asp-for="PropertyOption" class="control-label"></label>

                <input asp-for="PropertyOption" class="form-control" />

                <span asp-validation-for="PropertyOption" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label asp-for="Description" class="control-label"></label>

                <input asp-for="Description" class="form-control" />

                <span asp-validation-for="Description" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label asp-for="Address" class="control-label"></label>

                <input asp-for="Address" class="form-control" />

                <span asp-validation-for="Address" class="text-danger"></span>

            </div>
            <br />

            <div class="form-group mt-3">
                <input type="submit" value="Add " class="btn btn-primary" />
            </div>
            <div class="btn btn-primary mt-2">
                <a class="text-white text-decoration-none" asp-action="Index">Back to List</a>
            </div>
        </div>
        <div class="col-md-6">


            <div class="form-group">

                <label asp-for="InitialDeposit" class="control-label"></label>

                <input asp-for="InitialDeposit" class="form-control" />

                <span asp-validation-for="InitialDeposit" class="text-danger"></span>

            </div>
            <div class="form-group">

                <label asp-for="Landmark" class="control-label"></label>

                <input asp-for="Landmark" class="form-control" />

                <span asp-validation-for="Landmark" class="text-danger"></span>

            </div>


            <div class="form-group">

            <label asp-for="StateId" class="control-label"></label>

            <input asp-for="StateId" class="form-control" />

            <span asp-validation-for="StateId" class="text-danger"></span>

            </div>

            
            <div class="form-group">

                <label asp-for="CityId" class="control-label"></label>

                <input asp-for="CityId" class="form-control" />

                <span asp-validation-for="CityId" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label asp-for="PriceRange" class="control-label"></label>

                <input asp-for="PriceRange" class="form-control" />

                <span asp-validation-for="PriceRange" class="text-danger"></span>

            </div>

            


</form>


@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}